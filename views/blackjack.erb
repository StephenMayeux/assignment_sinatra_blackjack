<div class="row">
  <div class="col-md-9">
    <h2>Dealer's Hand</h2>
    <div class="row">
      <% dealer.each_with_index do |card, index| %>
        <% if index == 0 %>
          <div class="col-md-2">
            <p>Hidden!</p>
          </div>
        <% else %>
          <div class="col-md-2">
            <p><%= card %></p>
          </div>
        <% end %>
      <% end %>
    </div>
    <br>
    <h2>Your Hand</h2>
    <div class="row">
      <% player.each do |card| %>
        <div class="col-md-2">
          <p><%= card %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-3">
    <h3>Total Bankroll</h3>
    <br>
    <h3>Bet Amount</h3>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <form action="blackjack/hit" method="post">
      <input type="submit" value="Hit">
    </form>
    <form action="blackjack/stay" method="post">
      <input type="submit" value="Stand">
    </form>
  </div>
</div>
